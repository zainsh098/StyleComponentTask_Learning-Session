<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button_style">
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/_20sdp</item>
        <item name="android:layout_marginBottom">@dimen/_5sdp</item>
        <item name="android:background">@drawable/button_round</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/Light_80</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="button_style_login">
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="android:layout_marginStart">@dimen/_20sdp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@drawable/button_round_login</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/Violet_100</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="text_edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">@dimen/_16sdp</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:layout_height">@dimen/_45sdp</item>
        <item name="android:layout_marginStart">@dimen/_16sdp</item>
        <item name="android:background">@drawable/edit_field_round</item>
    </style>

    <style name="text_style_toolbar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_16ssp</item>
    </style>

    <style name="bottom_sheet_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_60sdp</item>
        <item name="android:textSize">@dimen/_18ssp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>